# ── Server ────────────────────────────────────────────────────────────────────
PORT=3000
BASE_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# ── Database ──────────────────────────────────────────────────────────────────

# Set DATABASE_URL to use Postgres. Leave unset to use SQLite.
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# SQLite only — ignored when DATABASE_URL is set
# DATABASE_PATH=./taskmanager.db

# ── MCP Client Credentials ────────────────────────────────────────────────────
# Clients must supply these when registering via /oauth/register and /oauth/token
MCP_CLIENT_ID=admin
MCP_CLIENT_SECRET=password

# ── Auth ──────────────────────────────────────────────────────────────────────
SUPERADMIN_EMAIL=you@example.com
SUPERADMIN_INITIAL_PASSWORD=changeme123

# Generate with: openssl rand -hex 32
SESSION_SECRET=replace-with-64-char-hex
FLASH_SECRET=replace-with-64-char-hex

# ── Environment ───────────────────────────────────────────────────────────────
NODE_ENV=production
